# Test environment configuration
# This file provides default values for testing
# Copy to .env for local development

# API Keys (use test/mock keys for CI)
DEEPGRAM_API_KEY=test-key-for-mocking
ELEVENLABS_API_KEY=test-key-for-mocking
OPENAI_API_KEY=test-key-for-mocking

# Test Mode Configuration
AUDIO_TEST_MODE=1  # Enable mock providers for testing
FORCE_MOCK_PROVIDERS=true  # Always use mocks in tests

# Cache Configuration
CACHE_DIR=.cache/test
CACHE_ENABLED=true
CACHE_TTL=3600

# Output Configuration
OUTPUT_DIR=test-output
LOG_LEVEL=DEBUG
LOG_FILE=test.log

# Test Data Configuration
TEST_MEDIA_DIR=tests/fixtures/media
TEST_FIXTURES_DIR=tests/fixtures

# Performance Settings
CHUNK_SIZE=1024
MAX_CONCURRENT_WORKERS=2
REQUEST_TIMEOUT=30

# Feature Flags
ENABLE_HTML_DASHBOARD=true
ENABLE_ADVANCED_ANALYSIS=true
ENABLE_CACHE_COMPRESSION=false

# CI/CD Configuration
CI=true
GITHUB_ACTIONS=true
PYTEST_CURRENT_TEST=true

# Coverage Settings
COVERAGE_MIN_PERCENTAGE=80
COVERAGE_FAIL_UNDER=45

# Test Database (if needed)
TEST_DATABASE_URL=sqlite:///:memory:
TEST_REDIS_URL=redis://localhost:6379/15
